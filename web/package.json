{
  "private": true,
  "name": "web",
  "repository": "https://github.com/carosaur/tankmon/",
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.5",
    "node-gyp": "^7.1.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "build": "cd client && yarn run build",
    "start": "node server",
    "start:pm2": "pm2 start --name web yarn -- start",
    "restart:pm2": "yarn run build && pm2 restart web",
    "dev": "run-p dev:client dev:server",
    "dev:client": "cd client && yarn run dev",
    "dev:server": "cd server && yarn run dev",
    "format": "prettier --write .",
    "script": "node scripts",
    "test": "jest",
    "test:detect": "jest --detectOpenHandles"
  },
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ]
}
