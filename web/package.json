{
  "private": true,
  "name": "web",
  "repository": "https://github.com/carosaur/tankmon/",
  "dependencies": {
    "node-gyp": "^7.1.2",
    "node-pre-gyp": "^0.17.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "build": "cd client && npm run build",
    "start": "node server",
    "dev": "run-p dev:client dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "format": "prettier --write .",
    "script": "node scripts",
    "test": "jest",
    "test-detect": "jest --detectOpenHandles",
    "build:package": "cd packages/test && rollup -c",
    "start:pm2": "pm2 start --name public npm -- start",
    "restart:pm2": "npm run build && pm2 restart public"
  },
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ]
}
