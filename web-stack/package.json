{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "name": "web-stack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier-cli": "^0.1.0"
  },
  "scripts": {
    "start": "node server/server",
    "deploy": "pm2 server/server.js",
    "restart": "pm2 restart server",
    "build": "cd client && npm run build",
    "dev": "run-p dev:client dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "install:client": "cd client && npm i",
    "install:server": "cd server && npm i",
    "postinstall": "run-p install:client install:server",
    "uninstall": "sudo rm -r node_modules && sudo rm -r client/node_modules && sudo rm -r server/node_modules",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "commit": "git pull && git add . && git commit -m updates && git push"
  }
}
